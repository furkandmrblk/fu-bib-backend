datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    //  binaryTargets = ["native"]
}

generator giraphql {
    provider = "prisma-giraphql-types"
    // clientOutput = "@prisma/client"
    output   = "./giraphql-types.ts"
}

model Session {
    id     String @id @default(uuid())
    user   User   @relation(fields: [userId], references: [id])
    userId String @unique

    expiresAt DateTime?
}

model User {
    id       String  @id @default(uuid())
    admin    Boolean
    email    String  @unique
    password String
    name     String?
    major    String?

    booked          Boolean
    tableIdentifier String?

    mostUsedLibrary String?
    mostUsedTable   String?

    reservations Int?
    extensions   Int?

    strikes Int?
    softban Boolean

    date    Float
    Session Session[]
}

model Library {
    id           String  @id @default(uuid())
    section      String  @unique
    name         String  @unique
    adress       String
    secondAdress String?
    email        String
    website      String?

    floor String[]

    Table Table[]
}

model Table {
    id          String  @id @default(uuid())
    identifier  String  @unique
    order       Int
    library     Library @relation(fields: [libraryName], references: [name])
    libraryName String
    floor       String

    booked       Boolean
    userId       String? @unique
    time         Float?
    extendedTime Boolean
}
